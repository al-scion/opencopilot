{
  "name": "opencopilot-cloud",
  "compatibility_date": "2025-12-10",
  "compatibility_flags": ["nodejs_compat"],
  "preview_urls": true,
  "workers_dev": true,
  "observability": { "enabled": true },
  "placement": { "mode": "smart" },
  "routes": [{ "custom_domain": true, "pattern": "cloud.usefabric.xyz" }],
  "main": "src/index.ts",
  "r2_buckets": [
    {
      "bucket_name": "opencopilot-storage",
      "binding": "STORAGE",
      "remote": true
    }
  ]
}
