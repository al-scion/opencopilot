---
interface Props {
	imageSrc?: string;
	imageAlt?: string;
}

const { imageSrc = "/showcase.png", imageAlt = "Fabric in action" } = Astro.props;
---

<section class="showcase">
	<div class="showcase-container">
		<div class="showcase-window">
			<div class="window-header">
				<div class="window-dots">
					<span class="dot"></span>
					<span class="dot"></span>
					<span class="dot"></span>
				</div>
			</div>
			<div class="window-content">
				<slot>
					<div class="placeholder">
						<p>Product demo goes here</p>
					</div>
				</slot>
			</div>
		</div>
	</div>
</section>

<style>
	.showcase {
		padding: 0 var(--space-md) var(--space-2xl);
	}

	.showcase-container {
		max-width: var(--max-width);
		margin: 0 auto;
	}

	.showcase-window {
		background: #fff;
		border-radius: 12px;
		box-shadow:
			0 0 0 1px rgba(0, 0, 0, 0.05),
			0 4px 16px rgba(0, 0, 0, 0.08),
			0 12px 48px rgba(0, 0, 0, 0.08);
		overflow: hidden;
	}

	.window-header {
		padding: 12px 16px;
		border-bottom: 1px solid var(--color-border);
		background: #fafafa;
	}

	.window-dots {
		display: flex;
		gap: 6px;
	}

	.dot {
		width: 10px;
		height: 10px;
		border-radius: 50%;
		background: #ddd;
	}

	.window-content {
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.placeholder {
		color: var(--color-text-secondary);
		font-size: 0.875rem;
	}
</style>
