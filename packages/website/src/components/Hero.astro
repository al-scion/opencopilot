---
interface Props {
	headline?: string;
	subheadline?: string;
	ctaText?: string;
	ctaHref?: string;
}

const {
	headline = "Built to make you extraordinarily productive,\nFabric is the best way to work with Excel using AI.",
	subheadline = "",
	ctaText = "Download for macOS",
	ctaHref = "/download",
} = Astro.props;
---

<section class="hero">
	<div class="hero-content">
		<h1 class="headline">{headline}</h1>
		{subheadline && <p class="subheadline">{subheadline}</p>}
		<a href={ctaHref} class="cta">
			{ctaText}
			<svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M8 12L8 4M8 12L5 9M8 12L11 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>
		</a>
	</div>
</section>

<style>
	.hero {
		padding: calc(var(--space-2xl) + 60px) var(--space-md) var(--space-xl);
		text-align: left;
		max-width: var(--max-width);
		margin: 0 auto;
	}

	.hero-content {
		max-width: 720px;
	}

	.headline {
		font-size: clamp(2rem, 5vw, 2.75rem);
		font-weight: 500;
		line-height: 1.2;
		letter-spacing: -0.02em;
		white-space: pre-line;
		margin-bottom: var(--space-lg);
	}

	.subheadline {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		margin-bottom: var(--space-lg);
		max-width: 540px;
	}

	.cta {
		display: inline-flex;
		align-items: center;
		gap: var(--space-xs);
		background: var(--color-accent);
		color: var(--color-bg);
		padding: 0.75rem 1.25rem;
		border-radius: 6px;
		font-size: 1rem;
		font-weight: 500;
		transition: opacity 0.15s;
	}

	.cta:hover {
		opacity: 0.9;
	}
</style>
